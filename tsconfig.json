{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"useDefineForClassFields": true,
		"strict": true,
		"jsx": "preserve",
		"jsxFactory": "VueJSX",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "WebWorker"],
		"types": ["vite/client", "chrome"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts",
		"src/types/*.d.ts",
		"src/**/*.vue",
		"manifest.config.ts",
		"src/site/twitch.tv/modules/**/*.d.ts"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
